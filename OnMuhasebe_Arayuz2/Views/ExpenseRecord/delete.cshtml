@{
}
@model OnMuhasebe_Arayuz2.Models.ExpenseRecord

@{
    ViewData["Title"] = "Gider Kaydını Sil";
}

<h2>Gider Kaydını Sil</h2>

<h3>Bu kaydı silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Ad: @Model.ad</h4>
    <h4>Miktar: @Model.miktar</h4>
    <h4>Değer: @Model.deger</h4>
    <h4>Tarih: @Model.tarih.ToShortDateString()</h4>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="id" />
    <input type="submit" value="Sil" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>