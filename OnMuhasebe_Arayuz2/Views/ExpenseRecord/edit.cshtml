@{
}
@model OnMuhasebe_Arayuz2.Models.ExpenseRecord

@{
    ViewData["Title"] = "Gider Kaydını Düzenle";
}

<h2>Gider Kaydını Düzenle</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="ad" class="control-label">Ad</label>
        <input asp-for="ad" class="form-control" />
        <span asp-validation-for="ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="miktar" class="control-label">Miktar</label>
        <input asp-for="miktar" class="form-control" />
        <span asp-validation-for="miktar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="deger" class="control-label">Değer</label>
        <input asp-for="deger" class="form-control" />
        <span asp-validation-for="deger" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="tarih" class="control-label">Tarih</label>
        <input asp-for="tarih" class="form-control" type="date" />
        <span asp-validation-for="tarih" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>